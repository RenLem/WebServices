<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="omy.boston.webservices.MainActivity"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/textView_movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie title:"
        android:textSize="18sp"
    />

    <EditText
        android:id="@+id/editText_movie"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Type here..."
        android:inputType="textPersonName"
        android:layout_below="@+id/textView_movieTitle"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_getWebData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get web data"
        android:layout_below="@+id/editText_movie"
        android:layout_alignParentStart="true" />

</RelativeLayout>
